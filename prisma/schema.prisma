// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             Int         @id @default(autoincrement())
  loginId        String      @unique
  loginPassword  String?     // видимый пароль для админки
  role           Role        @default(USER)
  adminNoteName  String?     @default("")

  profile        Profile?
  codeConfig     CodeConfig?

  // связи с сообщениями
  messagesFrom   Message[]   @relation("messagesFrom")
  messagesTo     Message[]   @relation("messagesTo")
}

model Profile {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int     @unique
  nameOnSite String? @default("")
  idOnSite   String? @default("")
  residence  String? @default("")
  photoUrl   String?
}

model CodeConfig {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int      @unique
  code            String   @default("")
  emitIntervalSec Int      @default(22)
  paused          Boolean  @default(false)
}

model Message {
  id        Int      @id @default(autoincrement())

  from      User     @relation("messagesFrom", fields: [fromId], references: [id])
  fromId    Int

  to        User     @relation("messagesTo", fields: [toId], references: [id])
  toId      Int

  text      String   @default("")   // дефолт чтобы db push прошел без ресета
  createdAt DateTime @default(now())
}
